extends layout.pug

block content
  .container
    .d-flex.justify-content-between.align-items-center
      h1.display-4.my-4 List of emails
      a.btn.btn-danger(href='clear') Clear emails

    if emails.length !== 0
      .list-group.mb-5
        each email in emails
          a.list-group-item.list-group-item-action(href='/view/' + email.id)
            h5= email.subject
            .d-flex.justify-content-between.align-items-center
              small To: #{ email.to.text }
              small= email.fromNow
    else
      p.text-center.lead No emails exists
